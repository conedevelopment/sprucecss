{
  "name": "sprucecss",
  "version": "0.2.0",
  "description": "Spruce CSS - Another CSS Framework",
  "keywords": [
    "css",
    "css-framework",
    "framework",
    "front-end",
    "responsive",
    "sass",
    "sass-framework",
    "web"
  ],
  "author": "Cone (https://conedevelopment.com)",
  "homepage": "https://sprucecss.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/conedevelopment/sprucecss.git"
  },
  "bugs": {
    "url": "https://github.com/conedevelopment/sprucecss/issues"
  },
  "scripts": {
    "autoprefixer": "postcss css/*.css -u autoprefixer --replace --no-map",
    "browser-sync": "browser-sync start --server --startPath \"preview/html/index.html\" --files \"**/*\" --directory --no-notify",
    "delete-dev-folder": "del-cli --force css",
    "dev": "npm-run-all --parallel pug sass-compile-dev sass-compile-preview browser-sync",
    "prod": "npm-run-all delete-dev-folder sass-compile-prod-expanded sass-compile-prod-compressed autoprefixer",
    "pug": "pug --watch preview/pug/ --out preview/html/ --pretty",
    "sass-compile-dev": "sass --load-path=node_modules --load-path=scss --watch --update --style=expanded scss:css",
    "sass-compile-preview": "sass --load-path=node_modules --load-path=scss --watch --update --style=expanded --no-source-map preview/scss:preview/css",
    "sass-compile-prod-expanded": "sass --load-path=node_modules --load-path=scss --no-source-map --style=expanded scss/spruce.scss:css/spruce.css",
    "sass-compile-prod-compressed": "sass --load-path=node_modules --load-path=scss --no-source-map --style=compressed scss/spruce.scss:css/spruce.min.css",
    "sass-lint": "stylelint scss/**/*.scss",
    "sass-lint-with-fix": "stylelint scss/**/*.scss --fix"
  },
  "license": "MIT",
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "browser-sync": "^2.27.7",
    "del-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.45.1",
    "stylelint": "^14.2.0",
    "stylelint-config-sass-guidelines": "^9.0.1"
  }
}
